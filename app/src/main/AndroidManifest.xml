<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monitoringsolars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".server.AppController"
        android:allowBackup="true"
        android:icon="@drawable/solar_house"
        android:label="@string/app_name"
        android:roundIcon="@drawable/solar_house"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu"></activity>
        <activity android:name=".MonitorData" />
        <activity android:name=".Graph" />
        <activity android:name=".MonitorDatas" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ListDataSolar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>